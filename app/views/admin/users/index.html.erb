<h1>管理者画面　ユーザー一覧</h1>
  <table class="table table-hover shadow-sm p-3 mb-5 bg-white rounded">
    <thead>
      <tr>
        <th>ユーザーID</th>
        <th>ユーザーネーム</th>
        <th>メールアドレス</th>
        <th>タスク投稿数</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr class="user_row">
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.tasks.count %></td>
          <td><%= link_to '詳細', admin_user_path(user.id) , class:"btn btn-sm btn-outline-secondary"%></td>
          <td><%= link_to '編集', edit_admin_user_path(user.id) , class:"btn btn-sm btn-outline-secondary"%></td>
          <td><%= link_to '削除', admin_user_path(user.id), method: :delete , data: { confirm: '本当に編集していいですか？' } , class:"btn btn-sm btn-outline-secondary"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
